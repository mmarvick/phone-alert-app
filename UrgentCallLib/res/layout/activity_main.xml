<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >
    
    <TextView
        android:id="@+id/textView_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Urgent Call is"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/simpleStateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="@dimen/large_textSize" />    
    
    <LinearLayout
        android:id="@+id/layout_footer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simpleStateText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

	    <TextView
	        android:id="@+id/textView_callsNumber"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/large_textSize"
	        android:layout_gravity="center_vertical"
	        android:textColor="@color/holo_blue_light" />	

	    <TextView
	        android:id="@+id/textView_callsText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/normal_textSize"
	        android:layout_gravity="center_vertical" />	 	    
	    	    
	    <TextView
	        android:id="@+id/textView_footer1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/normal_textSize"
	        android:layout_gravity="center_vertical" />	
	    
	    <TextView
	        android:id="@+id/textView_minsNumber"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/large_textSize"
	        android:layout_gravity="center_vertical"
	        android:textColor="@color/holo_blue_light" />    
	        
	    <TextView
	        android:id="@+id/textView_minsText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/normal_textSize"
	        android:layout_gravity="center_vertical" />	  
	               
    </LinearLayout>
    
    <TextView
        android:id="@+id/textView_footer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_footer1"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/small_textSize" /> 
    
    <LinearLayout
        android:id="@+id/layout_footer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_footer2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

	    <TextView
	        android:id="@+id/textView_forText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:textSize="@dimen/small_textSize" />        
        
	    <TextView
	        android:id="@+id/textView_forSelection"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:textColor="@color/holo_blue_light"
	        android:textSize="@dimen/small_textSize" /> 
	        
	</LinearLayout>

</RelativeLayout>

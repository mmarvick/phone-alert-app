<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:range="http://schemas.android.com/apk/lib/com.mmarvick.urgentcall"
    android:key="PREFERENCES" >
    <Preference
        android:key="single_call_state_STATUS"
        android:title="Text Alerts"
        />
    
    <PreferenceCategory
        android:title="Alert Filter" >
	    
	    <Preference
	        android:key="single_call_state_FILTER_USERS"
	        android:title="Allow / Block List" />
	    
	</PreferenceCategory>
	
    <PreferenceCategory
        android:title="Alert Behavior" >    
     
	    <ListPreference
	        android:key="single_call_state_HOW"
	        
	        android:title="How to alert?"
	        android:entries="@array/pref_noise_entries"
	        android:entryValues="@array/pref_noise_values"
	        />
	    
	    <Preference
	        android:key="single_call_state_TIME"
	        android:title="How long?"
	        />	    
	    
	    <RingtonePreference
	        android:key="single_call_state_SOUND"
	        android:title="Ringtone"
	        android:showDefault="true"
	        android:showSilent="false"
	        android:ringtoneType="alarm"
	        />
	    
	    <Preference
	        android:key="single_call_state_VOLUME"
	        android:title="Volume"
	        />
	   
	</PreferenceCategory>

</PreferenceScreen>
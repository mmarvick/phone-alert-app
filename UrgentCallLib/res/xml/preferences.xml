<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:range="http://schemas.android.com/apk/lib/com.mmarvick.urgentcall"
    android:key="PREFERENCES" >
    <com.mmarvick.urgentcall.MinMaxEditTextPreference
        android:key="CALL_QTY"
        android:title="Number of Calls"
        android:defaultValue="3"
        android:inputType="number"
        range:min="2"
        range:max="9"
        />
    
    <com.mmarvick.urgentcall.MinMaxEditTextPreference
        android:key="CALL_MIN"
        android:title="Minutes for Calls"
        android:defaultValue="15"
        android:inputType="number"
        range:min="1"
        range:max="60"
        />
    
    <ListPreference
        android:key="LIST_TYPE"
        android:title="Filter Callers"
        android:dialogTitle="Who should be able to trigger an Urgent Call alert?"
        android:entries="@array/pref_listType_entries"
        android:entryValues="@array/pref_listType_values"
        android:defaultValue="0"
        />
    
    <Preference
        android:key="LIST_TYPE_LITE"
        android:title="Filter Callers"
        />
    
    <Preference android:key="EDIT_WHITELIST" 
        android:title="Edit Whitelist" >
        
    </Preference>
    
    <Preference android:key="EDIT_BLACKLIST" 
        android:title="Edit Blacklist" >
        
    </Preference>

</PreferenceScreen>
